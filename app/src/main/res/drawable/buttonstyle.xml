<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <!-- 阴影 -->
            <corners android:radius="10dp" />
            <solid android:color="#8E8E91" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#1C2018" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <!-- 阴影 -->
            <corners android:radius="10dp" />
            <solid android:color="#289BE5" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
        </shape>
    </item>
</selector>